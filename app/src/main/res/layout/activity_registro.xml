<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginYRegistro.RegistroActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="25dp"
                android:paddingTop="55dp"
                android:paddingRight="25dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    
                    <ImageView
                        android:layout_width="218dp"
                        android:layout_height="208dp"
                        android:layout_gravity="center_horizontal"
                        android:background="@drawable/logo"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Registro"
                        android:textColor="#676234"
                        android:textSize="50dp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>
    
                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:gravity="bottom"
                        tools:ignore="MissingConstraints">

                        <EditText
                            android:id="@+id/email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_focused_bg"
                            android:hint="Correo electrónico"
                            android:inputType="textEmailAddress"
                            android:padding="20dp"
                            android:textSize="15dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:gravity="bottom"
                        tools:ignore="MissingConstraints">

                        <EditText
                            android:id="@+id/nombre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Nombre"
                            android:inputType="textPersonName"
                            android:padding="20dp"
                            android:textSize="15dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:gravity="bottom"
                        tools:ignore="MissingConstraints">

                        <EditText
                            android:id="@+id/contrasenya"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_focused_bg"
                            android:hint="Contraseña"
                            android:inputType="textPassword"
                            android:padding="20dp"
                            android:textSize="15dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:gravity="bottom"
                        tools:ignore="MissingConstraints">

                        <EditText
                            android:id="@+id/numero"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_text_focused_bg"
                            android:hint="Número de teléfono"
                            android:inputType="number"
                            android:ems="10"
                            android:padding="20dp"
                            android:textSize="15dp"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/checkbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Checkbox"
                        android:textSize="10dp"/>

                        <TextView
                            android:id="@+id/TextView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:clickable="true"
                            android:textSize="10dp"/>

                </LinearLayout>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/registro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@android:style/Widget.Material.Button.Borderless.Colored"
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="25dp"
                        android:background="#676234"
                        android:padding="12dp"
                        android:text="Registrarse"
                        android:textColor="@color/white"
                        android:textSize="15dp"/>

            </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/existing"
                    android:padding="15sp"
                    android:layout_gravity="center_horizontal"
                    android:text="¿Ya tiene una cuenta?"
                    android:textSize="15dp"/>

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/pBar"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="28dp"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>